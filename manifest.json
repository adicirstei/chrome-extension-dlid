{
  "name": "DLI Downloader",
  "version": "1.0",
  "manifest_version": 2,
  "description": "The first extension that I made.",
  "background": { "scripts": ["background.js"] },
  "page_action": {
    "default_icon": "icon.png",
    "default_title" : "This is a DLI page"
  },

  "permissions": [
  "downloads",
	"tabs",
	"http://*/*"
  ],
  "content_scripts": [ {
      "js": [ "setui.js" ],
      "matches": [ "http://*.dli.ernet.in/*" ],
	  "all_frames": true
   } ]
}